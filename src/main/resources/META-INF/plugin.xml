<idea-plugin>
    <id>com.github.strindberg.emacsj-plus</id>
    <name>EmacsJ-plus</name>
    <vendor>Jesper Holmberg</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.github.strindberg.emacsj</depends>

    <resource-bundle>messages.EmacsJPlusBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij"/>

    <actions>
        <!--MoveCaretDownWithSelectionAction.java-->
        <!--MoveCaretLeftWithSelectionAction.java-->
        <!--MoveCaretRightWithSelectionAction.java-->
        <!--MoveCaretUpWithSelectionAction.java-->

        <!--MoveDownWithSelectionAndScrollAction.java-->
        <!--MoveUpWithSelectionAndScrollAction.java-->

        <!--NextWordInDifferentHumpsModeWithSelectionAction.java-->
        <!--PreviousWordInDifferentHumpsModeWithSelectionAction.java-->

        <!--BackwardParagraphWithSelectionAction.java-->
        <!--ForwardParagraphWithSelectionAction.java-->

        <!--PageBottomWithSelectionAction.java-->
        <!--PageDownWithSelectionAction.java-->
        <!--PageTopWithSelectionAction.java-->
        <!--PageUpWithSelectionAction.java-->

        <!--LineEndWithSelectionAction.java-->
        <!--LineStartWithSelectionAction.java-->
        <!--NextWordWithSelectionAction.java-->
        <!--PreviousWordWithSelectionAction.java-->
        <!--TextEndWithSelectionAction.java-->
        <!--TextStartWithSelectionAction.java-->

        <action id="com.github.strindberg.emacsjplus.actions.rectangle.rectangleselect"
                class="com.github.strindberg.emacsjplus.actions.rectangle.RectangleSelectAction">
            <keyboard-shortcut first-keystroke="control X" second-keystroke="SPACE" keymap="Emacs"/>
        </action>
        <action id="com.github.strindberg.emacsjplus.actions.rectangle.movecaretdown"
                class="com.github.strindberg.emacsjplus.actions.rectangle.MoveCaretDownAction">
            <keyboard-shortcut first-keystroke="control N" keymap="Emacs"/>
        </action>
        <action id="com.github.strindberg.emacsjplus.actions.rectangle.movecaretup"
                class="com.github.strindberg.emacsjplus.actions.rectangle.MoveCaretUpAction">
            <keyboard-shortcut first-keystroke="control P" keymap="Emacs"/>
        </action>
        <action id="com.github.strindberg.emacsjplus.actions.rectangle.movecaretleft"
                class="com.github.strindberg.emacsjplus.actions.rectangle.MoveCaretRightAction">
            <keyboard-shortcut first-keystroke="control F" keymap="Emacs"/>
        </action>
        <action id="com.github.strindberg.emacsjplus.actions.rectangle.movecaretright"
                class="com.github.strindberg.emacsjplus.actions.rectangle.MoveCaretLeftAction">
            <keyboard-shortcut first-keystroke="control B" keymap="Emacs"/>
        </action>

        <action id="com.github.strindberg.emacsjplus.actions.selection.selectnextoccurrence"
                class="com.github.strindberg.emacsjplus.actions.selection.SelectNextOccurrenceAction">
            <keyboard-shortcut first-keystroke="control shift SPACE" keymap="Emacs"/>
        </action>
        <action id="com.github.strindberg.emacsjplus.actions.selection.selectalloccurrences"
                class="com.github.strindberg.emacsjplus.actions.selection.SelectAllOccurrencesAction">
            <keyboard-shortcut first-keystroke="shift alt SPACE" keymap="Emacs"/>
        </action>

        <action id="com.github.strindberg.emacsjplus.actions.macro.runlastmacro"
                class="com.github.strindberg.emacsjplus.actions.macro.RunLastMacroAction">
            <keyboard-shortcut first-keystroke="control X" second-keystroke="E" keymap="Emacs"/>
        </action>

    </actions>

</idea-plugin>
